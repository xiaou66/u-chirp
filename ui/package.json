{
  "name": "u-chirp",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host --mode prod",
    "build:um": "run-p type-check \"build-only --mode $npm_config_mode --config vite.pm.config.ts\" --",
    "build:main": "run-p type-check \"build-only --mode $npm_config_mode \" --",
    "build": "run-p build:um build:main",
    "build:prod": "npm_config_mode=prod run-p build:um build:main",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --fix",
    "format": "prettier --write pages/src/"
  },
  "dependencies": {
    "@u-chirp/components": "workspace:^",
    "@u-chirp/shadcn": "workspace:^",
    "@u-chirp/utils": "workspace:^",
    "@vue/shared": "^3.5.12",
    "@vueuse/core": "^11.2.0",
    "axios": "^1.7.7",
    "dayjs": "^1.11.13",
    "element-plus": "^2.8.8",
    "hotkeys-js": "^3.13.7",
    "pinia": "^2.2.6",
    "pinia-plugin-persistedstate": "^4.1.3",
    "quill": "^2.0.2",
    "vue": "^3.5.12",
    "vue-i18n": "^10.0.4",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.10.4",
    "@tsconfig/node20": "^20.1.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.17.6",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitejs/plugin-vue-jsx": "^4.0.1",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.1.3",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.20",
    "code-inspector-plugin": "^0.18.2",
    "daisyui": "^4.12.14",
    "eslint": "^9.14.0",
    "eslint-plugin-oxlint": "^0.11.0",
    "eslint-plugin-vue": "^9.30.0",
    "less": "^4.2.0",
    "lodash-es": "^4.17.21",
    "npm-run-all2": "^7.0.1",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.13.0",
    "unplugin-auto-import": "^0.18.3",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.4.10",
