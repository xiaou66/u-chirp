{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "packages/**/*",
    "packages/**/*.vue",
    "pages/src/**/*",
    "pages/src/**/*.vue",
    "pages/pm-src/**/*",
    "pages/pm-src/**/*.vue"
  ],
  "exclude": [
    "pages/src/**/__tests__/*",
    "pages/pm-src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": "./ui",
    "paths": {
      "@/src": ["./src/*"]
    }
  },
  "types": ["vite-plugin-svg-icons/client", "quill"]
}
